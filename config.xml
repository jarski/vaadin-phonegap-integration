<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.example.vaadinwrapped"
	version 	= "0.0.1">

	<name>Vaadin PhoneGap integration</name>
    <author email="jarno.rantala@vaadin.com">
        Jarno Rantala
    </author>
	<description>
		Wrapping Vaadin applications inside PhoneGap
	</description>
    <icon src="icon.png" gap:role="default" />
    
	<access origin="*" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.7" />
    <gap:plugin name="org.apache.cordova.splashscreen" version="0.2.7" />
    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    <feature name="org.apache.cordova.network-information" />
</widget>